%div{ data: { role: 'controlgroup', type: 'horizontal' } }
  %a{ href: "#", data: { role: 'button', mini: 'true', pdf: 'true', href: entry_index_url(:format => :pdf) } } Reporte
%br    

= will_paginate @entries
%ul.account{ data: { role: 'listview', inset: 'true', theme: 'c', filter: 'false' } }

  - @entries.each do |entry|
    %li{ data: { role: 'list-divider' } }
    
      %div{ class: "ui-grid-b" }

        %div{ class: "ui-block-a date" }= entry.number 
        %div{ class: "ui-block-b " }= entry.updated_at.strftime("%m/%d/%Y")        
        %div{ class: "ui-block-c" }
        
    %li{ class: 'account'}
      - entry.d_kind_details.each do |d|
        %div{ class: "ui-grid-b" }
          
          %div{ class: "ui-block-a date" }
          
          %div{ class: "ui-block-b accounts" }
            %div{ class: "ui-grid-a" }
              
              %div{ class: "ui-block-a" }= d.account.name
              %div{ class: "ui-block-b" } 
              
                           
          %div{ class: "ui-block-c column" }
            %div{ class: "ui-grid-a" }
              
              %div{ class: "ui-block-a" }= d.value
              %div{ class: "ui-block-b" } 0
      
        %hr
      
      - entry.h_kind_details.each do |d|
        %div{ class: "ui-grid-b" }
          
          %div{ class: "ui-block-a date" }
          
          %div{ class: "ui-block-b accounts" }
            %div{ class: "ui-grid-a" }
              
              %div{ class: "ui-block-a haber" }= " a "+d.account.name
              
                           
          %div{ class: "ui-block-c column" }
            %div{ class: "ui-grid-a" }
              
              %div{ class: "ui-block-a" } 0
              %div{ class: "ui-block-b" }= d.value
        %hr        
    
      %li.description{ data: { trim: "40" } }= entry.description
