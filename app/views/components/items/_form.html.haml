= form_for @components_item, remote: true do |f|
  = f.label :name, "Nombre"
  = f.text_field :name

  = f.label :description, "Descripcion"
  = f.text_field :description

  = f.label :code, "Codigo"
  = f.text_field :code

  = f.label :category, "Categoria"
  = f.text_field :category

  %br
  %input.closer{ close: "#componentPopup", type: 'submit', value: 'Guardar', data: { icon: 'plus', theme: 'b' } }
