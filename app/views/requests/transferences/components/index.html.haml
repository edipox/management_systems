
= will_paginate @requests_transferences_components
%ul{ data: { role: 'listview', inset: 'true', theme: 'c', filter: 'true' } }
  %li{ data: { role: 'list-divider' } }
  
    %div{ class: "ui-grid-d" }
  
      %div{ class: "ui-block-a" } N&uacute;mero
          
      %div{ class: "ui-block-b" }  Estado
      
      %div{ class: "ui-block-c" }  Usuario
      
      %div{ class: "ui-block-d" }  Fecha
      
      %div{ class: "ui-block-e" }  Opciones
  
  - @requests_transferences_components.each do |requests_transferences_component|
    %li{ class: 'element detail'}
      %div{ class: "ui-grid-d" }
      
        %div{ class: "ui-block-a trim" }= requests_transferences_component.number
    
        %div{ class: "ui-block-b trim" }= requests_transferences_component.status.name
      
        %div{ class: "ui-block-c trim" }= requests_transferences_component.user.email
      
        %div{ class: "ui-block-d trim" }= requests_transferences_component.updated_at
  
        %div{ style:"width:262px;", class: "ui-block-e", data: { role: 'controlgroup', type: 'horizontal' } }
          - obj = requests_transferences_component
          - can_modify?(obj)
          - delete_css_class = !can?(:delete, obj) ? 'ui-disabled' : ''
          - edit_css_class = !can?(:edit, obj) ? 'ui-disabled' : ''
          %a{ href: requests_transferences_component_path(requests_transferences_component), data: { method: :delete, confirm: 'Esta seguro?', role: 'button', icon: 'delete', mini: 'true', remote: 'true' }, class: delete_css_class } Eliminar
          %a{ href: edit_requests_transferences_component_path(requests_transferences_component), data: { role: 'button', icon: 'grid', mini: 'true', remote: 'true'}, class: edit_css_class } Editar
          %a{ href: requests_transferences_component_path(requests_transferences_component), data: { role: 'button', icon: 'grid', mini: 'true', remote: 'true'} } Detalle
          
  - create_css_class = !can?(:create, Requests::Transferences::Component.new) ? 'ui-disabled' : ''
  = link_to 'Agregar  ', new_requests_transferences_component_path, { style: 'width: 250px; float: right', data: { role: 'button', theme: 'b', icon: 'new', remote: 'true' }, class: create_css_class }
  
%br    
%div{ data: { role: 'controlgroup', type: 'horizontal' } }
  %a{ href: "#", data: { role: 'button', mini: 'true', pdf: 'true', href: requests_transferences_components_url(:format => :pdf) } } Reporte
