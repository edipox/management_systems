
= will_paginate @requests_devolutions_products
%ul{ data: { role: 'listview', inset: 'true', theme: 'c', filter: 'true' } }
  %li{ data: { role: 'list-divider' } }
  
    %div{ class: "ui-grid-d" }
  
      
      %div{ class: "ui-block-b" }  
      
      %div{ class: "ui-block-c" }  
      
      %div{ class: "ui-block-d" } Motivo 
      
      %div{ class: "ui-block-e" }  
  
  - @requests_devolutions_products.each do |requests_devolutions_product|
    %li{ class: 'element detail'}
      %div{ class: "ui-grid-d" }
      
        %div{ class: "ui-block-b trim" }= requests_devolutions_product.transaction_id
      
        %div{ class: "ui-block-c trim" }= requests_devolutions_product.user_id
      
        %div{ class: "ui-block-d trim" }= requests_devolutions_product.reason
      
        %div{ class: "ui-block-e trim" }= requests_devolutions_product.status_id
  
        %div{ style:"width:262px;", class: "ui-block-e", data: { role: 'controlgroup', type: 'horizontal' } }
          -# if can? :delete, requests_devolutions_product 
          %a{ href: requests_devolutions_product_path(requests_devolutions_product), data: { method: :delete, confirm: 'Esta seguro?', role: 'button', icon: 'delete', mini: 'true', remote: 'true' } } Eliminar
          -# if can? :update, requests_devolutions_product 
          %a{ href: edit_requests_devolutions_product_path(requests_devolutions_product), data: { role: 'button', icon: 'grid', mini: 'true', remote: 'true'} } Editar
          %a{ href: requests_devolutions_product_path(requests_devolutions_product), data: { role: 'button', icon: 'grid', mini: 'true', remote: 'true'} } Detalle
          

  = link_to 'Agregar  ', new_requests_devolutions_product_path, { style: 'width: 250px; float: right', data: { role: 'button', theme: 'b', icon: 'new', remote: 'true' } }
