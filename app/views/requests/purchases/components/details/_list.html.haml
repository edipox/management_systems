= will_paginate @requests_purchases_components_details
%ul{ data: { role: 'listview', inset: 'true', theme: 'c' } }
  %li{ data: { role: 'list-divider' } }
  
    %div{ class: "ui-grid-b" }
  
      %div{ class: "ui-block-a" } Componente
      
      %div{ class: "ui-block-b" } Cantidad 
      
      %div{ class: "ui-block-c" } Opciones   
  
  - @requests_purchases_components_details.each do |requests_purchases_components_detail|
    %li{ class: 'element detail'}
      %div{ class: "ui-grid-c" }
      
        %div{ class: "ui-block-a trim" }= requests_purchases_components_detail.component.name
      
        %div{ class: "ui-block-b trim" }= requests_purchases_components_detail.quantity
      
        %div{ class: "ui-block-c", data: { role: 'controlgroup', type: 'horizontal' } }
          - obj = @requests_purchases_component
          - can_modify?(obj)
          - delete_css_class = !can?(:delete, requests_purchases_components_detail) ? 'ui-disabled' : ''
          - edit_css_class = !can?(:edit, requests_purchases_components_detail) ? 'ui-disabled' : ''
          %a{ href: requests_purchases_components_detail_path(requests_purchases_components_detail), data: { method: :delete, confirm: 'Esta seguro?', role: 'button', icon: 'delete', mini: 'true', remote: 'true' }, class: delete_css_class  } Eliminar
          %a{ href: edit_requests_purchases_components_detail_path(requests_purchases_components_detail), data: { role: 'button', icon: 'grid', mini: 'true', remote: 'true'}, class: edit_css_class  } Editar
