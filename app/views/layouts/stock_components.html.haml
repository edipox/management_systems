<!DOCTYPE html>
%html
  %head
    %title Componentes
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %div{ data: { role: 'page' }, class: 'not' }
      %div{ data: { role: 'header' } }
        %h3 Stock de Componentes
        %a{ href: destroy_user_session_path, data:{ method: :delete } } Logout
        %a{ href: settings_path, data:{ role: 'button', icon: "gear" } } Configuraciones
        = render 'layouts/stock_top_menu'
        
      %div#page
        %div#menu{ data: { role: 'controlgroup' } }
          %a{ href: 'stock/components/list', data: { role: 'button', remote: "true" } } Stock de componentes
          %a{ href: 'stock/components/transactions', data: { role: 'button', remote: "true"  } } Movimientos
          %a{ href: components_items_path, data: { role: 'button', remote:"true" } } Componentes
          %a{ href: components_categories_path, data: { role: 'button', remote:"true" } } Categorias

        - if notice  
          %div#notice_container
            %span{ "class"=>"ui-icon ui-icon-alert", "style"=>"width:17px; display:block;"}              
            %div#notice= notice

        %div#content
          = yield
        %div#popup{ class: 'ui-corner-all', data: { role: 'popup', theme: 'a', :'overlay-theme' => 'a' } } 
      %div{ data: { role: 'footer', position: 'fixed' } }
        %h3 Sistema de Gestion
