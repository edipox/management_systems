%ul{ data: { role: 'listview', theme: 'c' } }
  %li{ data: { role: 'list-divider'} }
    %div{ class: "ui-grid-a" }
        
      %div{ class: "ui-block-a" } Nombre
        
      %div{ class: "ui-block-b" } Descripci&oacute;n
  
  %li
    %div{ class: "ui-grid-a" }
    
      %div{ class: "ui-block-a" }= @products_composition.name
    
      %div{ class: "ui-block-b" }= @products_composition.description
    

  - @products_compositions_details = @products_composition.details.paginate(:page => params[:page])
